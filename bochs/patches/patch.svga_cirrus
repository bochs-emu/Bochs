+    case CIRRUS_ROP_NOTSRC_AND_NOTDST:
+      rop_handler = bitblt_rop_fwd_notsrc_and_notdst;
+      break;
+    default:
+      BX_ERROR(("unknown ROP %02x",rop));
+      break;
+    }
