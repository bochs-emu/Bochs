+      break;
+    case CIRRUS_ROP_SRC_NOTXOR_DST:
+      rop_handler = bitblt_rop_fwd_src_notxor_dst;
+      break;
+    case CIRRUS_ROP_SRC_OR_NOTDST:
+      rop_handler = bitblt_rop_fwd_src_or_notdst;
+      break;
+    case CIRRUS_ROP_NOTSRC:
+      rop_handler = bitblt_rop_fwd_notsrc;
+      break;
