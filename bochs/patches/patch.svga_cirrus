+  colors[0][2] = BX_CIRRUS_THIS control.reg[0x12];
+  colors[1][0] = BX_CIRRUS_THIS control.shadow_reg1;
+  colors[1][1] = BX_CIRRUS_THIS control.reg[0x11];
+  colors[1][2] = BX_CIRRUS_THIS control.reg[0x13];
+
+  bitmask = 0x80 << srcskipleft;
+  bits = *src++;
+  for (x = 0; x < count; x++) {
+    if ((bitmask & 0xff) == 0) {
+      bitmask = 0x80;
