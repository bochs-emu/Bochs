+          y_tileno = (offset / (320/8)) / Y_TILESIZE;
+          break;
+        case 640:
+          x_tileno = (offset % (640/8)) / (X_TILESIZE / 8);
+          y_tileno = (offset / (640/8)) / Y_TILESIZE;
+          break;
+        }
+        //assert(x_tileno<(BX_NUM_X_TILES));
+        //assert(y_tileno<(BX_NUM_Y_TILES));
+        SET_TILE_UPDATED (x_tileno, y_tileno, 1);
+      }
     }
 }
 
